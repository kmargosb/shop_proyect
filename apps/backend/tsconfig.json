{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "rootDir": ".",
    "outDir": "./dist",

    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "skipLibCheck": true,

    "baseUrl": "./src",
    "paths": {
      "@/*": ["*"]
    },

    "types": ["node", "jest"]
  },
  "include": ["src", "tests", "prisma"],
  "exclude": ["node_modules"]
}